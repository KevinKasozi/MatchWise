#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Running Prettier (frontend)..."
cd frontend && npx prettier --check . || exit 1
cd ..

echo "Running ESLint (frontend)..."
cd frontend && npx eslint . --ext .js,.jsx,.ts,.tsx || exit 1
cd ..

echo "Running Black (backend)..."
black --check football-predictor/backend/ || exit 1

echo "Running Flake8 (backend)..."
flake8 football-predictor/backend/ || exit 1

echo "All checks passed!" 